<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditThreat.IdentifyThreatFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spnMySpinner"
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:layout_alignParentTop="true"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:spinnerMode="dropdown"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Lista de Amenazas: Desastres Naturales -->
        <ListView android:id="@+id/ListDesastresNaturales"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:choiceMode="singleChoice"
            android:visibility="gone"/>
        <!-- Lista de Amenazas: Origen Industrial-->
        <ListView android:id="@+id/ListOrigenIndustrial"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:choiceMode="singleChoice"
            android:visibility="gone"/>
        <!-- Lista de Amenazas: Errores y Fallos no intencionados -->
        <ListView android:id="@+id/ListErroresFallos"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:choiceMode="singleChoice"
            android:visibility="gone"/>
        <!-- Lista de Amenazas: Ataques deliberados -->
        <ListView android:id="@+id/ListAtaquesDeliberados"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:choiceMode="singleChoice"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
